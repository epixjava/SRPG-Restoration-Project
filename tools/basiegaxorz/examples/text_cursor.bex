	on VBLANK gosub vint

	dim cursor as integer
	dim counter as integer

	cursor=addsprite(1,1)

	enable INTERRUPTVBLANK
	print "The Magical Cursor!"
	do while 1
		input "Can you see the cursor blinking? ";a$
		if a$="YES" then
			print "Wow that is ";
			sleep 20
			print "G";
			sleep 20
			print "R";
			sleep 20
			print "E";
			sleep 20
			print "A";
			sleep 20
			print "T";
			sleep 20
			print "!";
			sleep 20
			print "!";
			end
		elseif a$="NO" then
			print "You know you want to"
			end
		else
			print "I don't understand freaking "; a$
		endif
	loop
	print a$;"!!!"

	end

vint:
	counter++
	select case counter
		case 10:
			propsprite cursor,0,1
			exit case
		case 11:
			exit case
		case 20:
			propsprite cursor,asc("_"),1
			counter=0
			exit case
	end select
	movesprite cursor,posx()<<3+136,posy()<<3+136
	return

 locate 5,14
 ink 3
 print "SPRITE TEST"
 red=0:green=0:blue=2:update=0
 on vblank gosub changecolors
 enable interrupt vblank
 sprite1=addsprite(1,4)
 sprite2=addsprite(1,4)
 propsprite sprite1,1,0
 propsprite sprite2,5,0
 a=0
 while 1
  while a<>216
   movesprite sprite1,128+a,128+a
   movesprite sprite2,416-a,128+a
   pallette rgb(red,green,blue),0,1
   pallette rgb(0,1,blue),0,0
   a=a+1
   sleep 1
  wend
  while a<>0
   movesprite sprite1,128+a,128+a
   movesprite sprite2,416-a,128+a
   pallette rgb(red,green,blue),0,1
   pallette rgb(0,1,blue),0,0
   a=a-1
   sleep 1
  wend
 wend

changecolors:
 update=update+1
 if update=5 then
  red=red+1%8
  green=7-red
  blue=blue+1%8
  update=0
 endif
 return


